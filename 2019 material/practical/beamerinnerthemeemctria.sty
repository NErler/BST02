\newcommand{\emctria@block}[1]{
  \par\vskip\medskipamount%
  \setlength{\parskip}{0pt}
  \ifbeamercolorempty[bg]{block title#1}{%
    \begin{beamercolorbox}[rightskip=0pt plus 4em]{block title#1}}{%
  \ifbeamercolorempty[bg]{block title}{%
    \begin{beamercolorbox}[rightskip=0pt plus 4em]{block title#1}%
  }%
  {%
    \begin{beamercolorbox}[
      sep=\dimexpr\emctria@blocksep-\emctria@blockadjust\relax,
      leftskip=\emctria@blockadjust,
      rightskip=\dimexpr\emctria@blockadjust plus 4em\relax
    ]{block title#1}%
  }}%
      \usebeamerfont*{block title#1}%
      \emctria@strut%
      \insertblocktitle%
      \emctria@strut%
  \end{beamercolorbox}%
  \nointerlineskip%
  \ifbeamercolorempty[bg]{block body#1}{%
    \begin{beamercolorbox}[vmode]{block body#1}}{
  \ifbeamercolorempty[bg]{block body}{%
    \begin{beamercolorbox}[vmode]{block body#1}%
  }{%
    \begin{beamercolorbox}[sep=\emctria@blocksep, vmode]{block body#1}%
    \vspace{-\emctria@parskip}
  }}%
      \usebeamerfont{block body#1}%
      \setlength{\parskip}{\emctria@parskip}%
}
