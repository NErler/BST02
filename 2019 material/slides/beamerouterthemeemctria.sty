	\rule[-\emctria@framesubtitle@padding]{0pt}{\emctria@framesubtitle@padding}
}
\defbeamertemplate{frametitle}{plain}{%
\ifx\insertframesubtitle\@empty%
  \nointerlineskip%
  \begin{beamercolorbox}[%
      wd=\paperwidth,%
      sep=0pt,%
      leftskip=\emctria@frametitle@leftskip,%
      rightskip=\emctria@frametitle@padding,%
    ]{frametitle}%
  \emctria@frametitlestrut@start%
  \insertframetitle%
  \nolinebreak%
  \emctria@frametitlestrut@end%
  \end{beamercolorbox}%
\else% subtitle
  \begin{beamercolorbox}[%
      wd=\paperwidth,%
      sep=0pt,%
      leftskip=\emctria@frametitle@leftskip,%
      rightskip=\emctria@frametitle@padding,%
    ]{frametitle}%
  \emctria@framesubtitlestrut@start%
  \insertframetitle%
  \\
  {\color{emclblue}\insertframesubtitle}
  \nolinebreak%
  \emctria@framesubtitlestrut@end%
  \end{beamercolorbox}%
\fi%  subtitle or not
\begin{tikzpicture}[overlay, remember picture]
\path[color=fg, draw, fill=fg,  line width=1pt] (current page.north west)
  -- ++(6ex,0)
  -- ++(-6ex,-6ex) 
  -- cycle;
\end{tikzpicture}
}

\setbeamertemplate{frametitle continuation}{%
  \usebeamerfont{frametitle}
  \romannumeral \insertcontinuationcount
}


% environment for titleframe
\newenvironment{titleframe}
{\begin{frame}[plain]
	\begin{tikzpicture}[remember picture,overlay]
	\path[draw, path image] (current page.south east) 
	-- ++(-\pageheight,0) 
	-- ++(\pageheight,\pageheight) 
	-- cycle;
	\end{tikzpicture}
	\maketitle
}
{\end{frame}}


