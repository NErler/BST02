	\rule{0pt}{\emctria@framesubtitle@padding - 0.1ex +%
		\totalheightof{%
			\ifcsdef{emctria@frametitleformat}{\emctria@frametitleformat X}{X}%
		}%
	}%
}
\newcommand{\emctria@frametitlestrut@end}{
  \rule[-\emctria@frametitle@padding]{0pt}{\emctria@frametitle@padding}
}
